#!/bin/bash

echo "Running pre-commit checks..."

# Run cargo fmt and check if there are changes
echo "Checking formatting..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "❌ Formatting check failed. Run 'cargo fmt --all' to fix."
    exit 1
fi
echo "✓ Formatting OK"

# Run clippy
echo "Running clippy..."
cargo clippy --workspace -- -D warnings
if [ $? -ne 0 ]; then
    echo "❌ Clippy check failed. Fix the warnings above."
    exit 1
fi
echo "✓ Clippy OK"

# Run tests
echo "Running tests..."
cargo test --workspace
if [ $? -ne 0 ]; then
    echo "❌ Tests failed. Fix the failing tests above."
    exit 1
fi
echo "✓ Tests OK"

echo "✅ All pre-commit checks passed!"
